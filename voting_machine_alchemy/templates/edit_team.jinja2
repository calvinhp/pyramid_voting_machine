{% extends "voting_machine_alchemy:templates/layout.jinja2" %}

{% block content %}
    <form action="{{request.route_url('team_action',action=action,event_id=event_id)}}" method="post" class="form">
        {% if action =='edit' %}
            {{ form.id() }}
        {% endif %}

        {{ form.event_id() }}

        {% for error in form.name.errors %}
            <div class="error">{{ error }}</div>
        {% endfor %}

        <div class="form-group">
            <label for="title">{{ form.name.label }}</label>
            {{ form.name(class_='form-control') }}
        </div>

        {% for error in form.members.errors %}
            <div class="error">{{ error }}</div>
        {% endfor %}

        <div class="form-group">
            <label for="title">{{ form.members.label }}</label>
            {{ form.members(class_='form-control') }}
        </div>
        <div class="form-group">
            <label></label>
            <button type="submit" class="btn btn-default">Submit</button>
        </div>


    </form>
    <p><a href="{{ request.route_url('event', id=event_id) }}">Go Back</a></p>
{% endblock %}
